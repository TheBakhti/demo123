<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.demo123.HelloController" stylesheets="@Style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="helloButton" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Hello!" onAction="#onHelloButtonClick"/>
    <Button fx:id="byeButton" GridPane.rowIndex="1" GridPane.columnIndex="2" text="Bye-Bye!" onAction="#onHelloButtonClick"/>
    <Label fx:id="welcomeText" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
